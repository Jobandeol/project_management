<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#fff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For:"
        android:textColor="#66000000"
        android:textSize="20dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/text_for"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Anybody"
        android:textColorHint="#10b5ec"
        android:layout_toRightOf="@+id/text_for"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:id="@+id/edit_anybody"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="in"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/edit_anybody"
        android:textColor="#66000000"
        android:layout_marginTop="15dp"
        android:paddingLeft="30dp"
        android:id="@+id/text_in"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Any Project"
        android:textColorHint="#10b5ec"
        android:layout_toRightOf="@+id/text_in"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:id="@+id/edit_anyproject"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#32000000"
        android:layout_below="@+id/edit_anyproject"
        android:layout_marginTop="10dp"
        android:id="@+id/view_in"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Task Name"
        android:textColorHint="#8c000000"
        android:layout_below="@+id/view_in"
        android:paddingLeft="15dp"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:id="@+id/edit_taskname"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#32000000"
        android:layout_below="@+id/edit_taskname"
        android:layout_marginTop="10dp"
        android:id="@+id/view_taskname"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:textColorHint="#77000000"
        android:layout_below="@+id/view_taskname"
        android:paddingLeft="15dp"
        android:id="@+id/edit_description"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#32000000"
        android:layout_below="@+id/edit_description"
        android:layout_marginTop="320dp"
        android:id="@+id/view_belowdescription"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/calendar"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/edit_description"
        android:layout_marginBottom="18dp"
        android:id="@+id/imageView2"
        android:clickable="true"
        android:onClick="showcalender"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/clipboard1"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toStartOf="@+id/edit_anybody"
        android:id="@+id/imageView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#04efcc"
        android:text="create"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentEnd="true" />






</RelativeLayout>

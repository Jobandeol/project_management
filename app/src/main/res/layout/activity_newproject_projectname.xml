<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#fff">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Project Name"
                android:textColorHint="#9e150606"
                android:textSize="25dp"
                android:background="@null"
                android:paddingLeft="10dp"
                android:id="@+id/project_name"
                android:layout_marginTop="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#32000000"
                android:layout_below="@+id/project_name"
                android:layout_margin="10dp"
                android:id="@+id/view_projectname"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAYOUT"
                android:textSize="20dp"
                android:textColor="#77150d0d"
                android:layout_below="@+id/view_projectname"
                android:paddingLeft="10dp"
                android:id="@+id/layout"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_radio_btn"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/layout"/>


    <ImageView
                 android:layout_width="75dp"
                 android:layout_height="75dp"
                 android:src="@drawable/list_projectname"
                 android:layout_below="@+id/layout"
                 android:layout_margin="10dp"
                 android:layout_toRightOf="@+id/list_radio_btn"
                 android:id="@+id/list_projectname"
                 android:padding="10dp"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="list"
                  android:textSize="30dp"
                  android:textColor="#000"
                  android:layout_toRightOf="@id/list_projectname"
                  android:layout_marginTop="140dp"
                  android:id="@+id/list_text"/>



              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Organize your work in an itemized list"
                  android:textColor="#77150d0d"
                  android:layout_below="@+id/list_text"
                  android:layout_toRightOf="@+id/list_radio_btn"
                  android:textSize="17dp"
                  android:id="@+id/orgn_edittext"
                  android:layout_marginTop="10dp"/>

              <RadioButton
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/orgn_edittext"
                  android:layout_marginTop="40dp"
                  android:id="@+id/board_radio_btn"

                  />

              <ImageView
                  android:layout_width="75dp"
                  android:layout_height="75dp"
                  android:src="@drawable/board"
                  android:padding="10dp"
                  android:layout_below="@+id/orgn_edittext"
                  android:layout_marginTop="25dp"
                  android:layout_toRightOf="@+id/board_radio_btn"
                  android:id="@+id/board_image"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Board"
                  android:textColor="#000"
                  android:textSize="30dp"
                  android:layout_toRightOf="@+id/board_image"
                  android:layout_marginTop="255dp"
                  android:id="@+id/text_board"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#77150d0d"
                  android:text="Organize your work like sticy notes across columns"
                  android:layout_below="@+id/text_board"
                  android:textSize="17dp"

                  android:layout_toRightOf="@+id/board_radio_btn"
                  android:id="@+id/text_org"
                  android:layout_marginTop="15dp"/>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="#32000000"
                  android:layout_below="@id/text_org"
                  android:layout_marginTop="160dp"
                  android:id="@+id/view_org"/>

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="#03ffdd"
                  android:text="Create"
                  android:textSize="17dp"
                  android:textStyle="bold"
                  android:layout_alignEnd="@+id/view_org"
                  android:layout_alignParentBottom="true"
                  android:layout_below="@+id/view_org"
                  android:layout_marginBottom="8dp"
                  android:layout_marginTop="8dp"
                  android:layout_marginRight="8dp"/>


</RelativeLayout>

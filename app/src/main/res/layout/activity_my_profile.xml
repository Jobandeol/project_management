<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gradient_myprofile"
        android:id="@+id/lay_1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY PROFILE"
            android:textColor="#000"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            android:textStyle="normal"
            android:textSize="25dp"/>
    </LinearLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="#fff"
       android:layout_below="@id/lay_1"
       android:layout_marginTop="30dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:id="@+id/lay_2">
       <ImageView
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:src="@drawable/unassigned"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="10dp"
           android:id="@+id/iv_unassigned"/>
       <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:hint="User Name"
           android:textColorHint="#bcafaf"
           android:background="@null"
           android:textColor="#000"
           android:textSize="20dp"
           android:layout_marginTop="15dp"
           android:layout_marginLeft="12dp"/>

   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d2d2"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/view_blw_usrnm"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_below="@id/lay_2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/lay_3">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/phones"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/iv_phone"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:background="@null"
            android:textColorHint="#bcafaf"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d2d2"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/view_mobile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_below="@id/lay_3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/lay_4">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/info"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/iv_empty_1"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Bio"
            android:background="@null"
            android:textColorHint="#bcafaf"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d2d2"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/view_empty_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_below="@id/lay_4"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/lay_5">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/gender"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/iv_empty_2"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Gender"
            android:textColorHint="#bcafaf"
            android:textColor="#000"
            android:background="@null"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d2d2"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/view_empty_2"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE"
        android:textColor="#f71a06"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#ede437"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
       android:layout_alignEnd="@id/view_empty_2"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/add_member"
        android:onClick="add_new_member"/>



</RelativeLayout>

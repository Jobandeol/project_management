<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#fff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To:"
        android:textSize="25dp"
        android:textColor="#66000000"
        android:paddingLeft="15dp"
        android:layout_marginTop="20dp"
        android:id="@+id/edit_to"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#ad000000"
        android:hint="Any team or project"
        android:layout_toRightOf="@+id/edit_to"
        android:layout_marginTop="15dp"
        android:id="@+id/edit_anyteam"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#32000000"
        android:layout_below="@+id/edit_to"
        android:layout_marginTop="15dp"
        android:id="@+id/view_toteam"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#b3000000"
        android:hint="Subject"
        android:layout_below="@+id/view_toteam"
        android:textSize="28dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/edit_subject"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#32000000"
        android:layout_below="@+id/edit_subject"
        android:layout_marginTop="10dp"
        android:id="@+id/view_subject"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Start a conversation..."
        android:textColorHint="#bc000000"
        android:layout_below="@+id/view_subject"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/edit_start"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#32000000"
        android:layout_below="@+id/edit_start"
        android:layout_marginTop="310dp"
        android:id="@+id/view_belowstart"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/clipboard1"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/edit_anyteam"
        android:layout_marginBottom="13dp"
        android:id="@+id/imageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="post"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#0be7dc"
        android:layout_below="@+id/view_belowstart"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:id="@+id/button2"
        android:layout_marginTop="4dp"/>


</RelativeLayout>

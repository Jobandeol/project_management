<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#c9bfbf">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/arrows"
        android:padding="15dp"
        android:id="@+id/arrows"
        android:onClick="image_back_arrow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inbox"
        android:textSize="40dp"
        android:textColor="#f1d504"
        android:layout_toRightOf="@+id/arrows"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:id="@+id/inbox"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#32000000"
        android:layout_below="@+id/inbox"
        android:id="@+id/view_below_ib"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/rotate"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/rotate"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hooray! You're up-to-date with your team's work"
        android:textColor="#011213"
        android:textSize="15dp"
       android:layout_below="@+id/rotate"
        android:padding="15dp"
        android:id="@+id/text_hooray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check back later for updates on the work you're following"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_below="@+id/text_hooray"
        android:padding="15dp"
        android:id="@+id/text_check"/>

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="+"
        android:textSize="35dp"
        android:background="@drawable/plus_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:clickable="true"/>
</RelativeLayout>
